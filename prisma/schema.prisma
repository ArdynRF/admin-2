// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AdminUser{
  id Int @id @default(autoincrement())
  userType String
  userName String @unique
  password String
}

model ProductType{
  id       Int     @id @default(autoincrement())
  name     String  @unique
  products Product[]
}

model Product {
  id            Int                @id @default(autoincrement())
  id_barang String? @unique
  name          String
  description   String
  mrp           Float
  image         String
  productTypeId Int
  currentStock  Int                @default(0)
  material      String?
  charateristic String?
  sample_price  String?
  moq           String?
  
  isActive      Boolean            @default(true)
  isCustomization Boolean          @default(true)
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  weight        String?
  width         String?
  

  // Relasi
  productType   ProductType        @relation(fields: [productTypeId], references: [id])
  priceTiers    ProductPricingTier[]
    technics      Technic[]          @relation("ProductTechnics")
  styles        Style[]            @relation("ProductStyles")
  patterns      Pattern[]          @relation("ProductPatterns")
  colorStocks ProductColorStock[] // menampung banyak warna dan stock
  carts Cart[]
}

model ProductPricingTier {
  id        Int     @id @default(autoincrement())
  productId Int
  minQty    Int
  maxQty    Int?
  unitPrice Float

  product   Product @relation(fields: [productId], references: [id])
}

model Technic {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  products Product[] @relation("ProductTechnics")
}

model Style {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  products Product[] @relation("ProductStyles")
}

model Pattern {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  products Product[] @relation("ProductPatterns")
}

model ProductColorStock {
  id        Int     @id @default(autoincrement())
  productId Int
  color     String
  stock     Int

  product   Product @relation(fields: [productId], references: [id])

  @@unique([productId, color]) // supaya tidak ada duplikat warna untuk satu produk
}

model User {
  id            Int                 @id @default(autoincrement())
  name          String
  email         String              @unique
  password      String
  phone_number  String?
  tax_number    String?
  created_at    DateTime            @default(now())

  // Relasi
  billingAddresses  BillingAddress[]
  shippingAddresses ShippingAddress[]
  carts Cart[]
}

model BillingAddress {
  id           Int      @id @default(autoincrement())
  user_id      Int
  label        String?
  address_line String?
  city         String?
  postal_code  String?
  is_default   Boolean  @default(false)

  // Relasi
  user User @relation(fields: [user_id], references: [id])
}

model ShippingAddress {
  id           Int      @id @default(autoincrement())
  user_id      Int
  label        String?
  address_line String?
  city         String?
  postal_code  String?
  is_default   Boolean  @default(false)

  // Relasi
  user User @relation(fields: [user_id], references: [id])
}

model Cart {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int      @default(1)
  question  String?  // SQLite otomatis TEXT
  addedAt   DateTime @default(now())

  // Relasi
  user    User    @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([userId, productId]) // satu user hanya boleh punya 1 cart untuk 1 product
}